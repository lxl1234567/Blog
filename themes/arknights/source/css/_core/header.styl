header
  top 0
  z-index 15
  height 100%
  font-family BenderLight
  display inline
  position sticky
  pointer-events none
  @media (max-width 1023px)
    clip-path polygon(0 0, 0 100%, 100% 100%, 100% 0)

nav
  position relative
  height 100%
  white-space nowrap
  overflow-y auto
  scroll-width none
  &::-webkit-scrollbar
    display none
  &::-ms-scrollbar
    display none
  a
    transition unset
    position relative
    height 40px
    line-height 40px
    padding 0 12px
    display inline-block
    sum = 0
    for i in hexo-config("menu")
      sum += 3
    if hexo-config("search") && hexo-config("search.enable")
      sum += 1
    padding (34em/sum) 0
    width 100%
    color #fff
    &:active
      background unset
  ol li
    display block

.navBtn
  transition transform .3s
  pointer-events all
  display block
  position absolute
  top 1em
  font-size 2em
  z-index 10
  .navBtnIcon 
    z-index 10
    width 1em
    height 1em
    display block
    position relative
  .navBtnIconBar
    position absolute
    top 50%
    width 1em
    height 0.1em
    background-color #d4d8dd
    text-indent 101%
    white-space nowrap
    overflow hidden
    transition transform ease-in-out 0.3s
  .navBtnIconBar
    &:nth-child(1)
      left 0
      transform translate(0, -350%)
    &:nth-child(2)
      left 0
      transform translate(0, -50%)
    &:nth-child(3)
      right 0
      transform translate(0, 250%)
.expanded .navBtnIconBar
  &:nth-child(1)
    transform translate(0, -50%) rotateZ(45deg) scaleX(0.5) translate(-50%)
  &:nth-child(3)
    transform translate(0, -50%) rotateZ(45deg) scaleX(0.5) translate(50%)
  &:nth-child(2)
    transform translate(0, -50%) rotateZ(-45deg)

.navContent
  overflow visible
  pointer-events all
  box-sizing border-box
  margin unset
  height 100%
  display flex
  flex-direction column
  justify-content center

.navItem
  overflow visible
  position relative
  margin unset
  transition .6s
  &.active
    a
      color #2bf
    &:hover a
      color #2bf
    .navItemTitle::after
      content ""
      display block
      width 100%
      position absolute
  @media ( max-width 1023px )
    & .navItemTitle::after
      content ""
      display block
      width 100%
      position absolute
  .navItemTitle
    transition .3s
    width 100%
    overflow-wrap break-word
    white-space normal
    position relative
    display block
  @media ( min-width 1024px )
    a:hover
      color #2bf
      background-color unset

@media ( max-width 768px )
  header
    left 0
    .navContent
      padding-left 0
  .navItem
    padding-left 2.5em

@media ( max-width 1023px )
  header
    width 100%
    max-width 100%
    position fixed
  nav
    max-width 428px
  .navBtn
    left 1em
  .navContent
    transform translateX(-100%)
    width 100%
    padding: 4.5em 2.5em 2em;
    transition transform 0.6s
    background-color rgba(0, 0, 0, 0.88)
  .navItem a
    &:hover
      background-color unset
      color #fff
    box-sizing border-box
    align-items flex-end
    padding 2px 2em
    border-bottom 1px solid rgba(57, 57, 57, 0.5)
    height 100%
  .navItemTitle
    padding-bottom 7px
    &::after
      height 0
      border-bottom 2px solid #fff
      bottom 0
      right 0
  .navItem.active .navItemTitle::after
    border-color #2bf
  .expanded .navContent
    transform translateX(0%)

@media ( min-width 1024px )
  header
    width 180px
  .navBtn
    display none
  .navItemTitle::after
    height 100%
    top 0
    box-sizing border-box
  .navItem
    width 120px

@media ( min-width 1440px )
  header
    width 240px
  .navItem
    width 150px

@media ( min-width 1920px )
  header
    width 310px
